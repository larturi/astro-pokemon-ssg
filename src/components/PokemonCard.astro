---
interface Props {
  name: string
  url: string
  isBig?: boolean
}

const { name, url, isBig = false } = Astro.props
const id = url.split('/').at(-2)
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    'flex flex-col rounded justify-center items-center p-2',
    {
      border: !isBig
    }
  ]}
>
  <img
    transition:name={`image-${name}`}
    src={imageSrc}
    alt={name}
    class:list={[{ 'w-[300px] h-[300px]': isBig }, { 'w-24 h-24': !isBig }]}
  />

  <h1 class:list={['capitalize', { 'text-3xl text-blue-400': isBig }, { 'text-xs': !isBig }]}>
    #{id} - {name}
  </h1>
</a>
